<%= form_with model: @article do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if @article.errors.any? %>
        <div class="error-area" style="color: red;">
          <h3><%= pluralize(@article.errors.count, 'error') %> prohibited your articles form being saved. </h3>
          <ul>
            <% @article.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :user_id, value:current_user.id %>
    </div>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control mt-2 mb-2" %>
    </div>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control mt-2 mb-2" %>
    </div>  
    <div class="form-group">
      <%= form.submit 'Submit', class:"btn btn-primary mt-2" %>
    </div>
  </div>    
<% end %>