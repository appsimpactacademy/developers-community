<li class="list-group-item" id="skill_item_<%= skill.id %>">
  <div class="row">
    <div class="col-lg-9">
      <div class="d-flex justify-content-start">
        <p class="fw-bold"><%= skill.title %></p>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="d-flex justify-content-end">
        <%= link_to edit_skill_path(skill), data: { controller: 'bs-modal-form' } do %>
        <i class="fa-solid fa-pencil me-2"></i>
        <% end %>
        <%= link_to skill_path(skill), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this?' } do %>
          <i class="fa-solid fa-trash text-danger me-2"></i>
        <% end %>
      </div>
    </div>
  </div>
</li>