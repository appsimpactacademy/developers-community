<div class="col-lg-10 mx-auto mt-3">
  <div class="row">
    <% if @shared_posts.present?  %>
      <% @shared_posts.each do |post| %>
        <% unless post.visited_by?(current_user) %>
          <div class="col-lg-4 mt-3 mb-3">
            <div class="card text-center shadow rounded-0" style="min-height: 350px;">
              <div class="card-body">
                <% if post.images.attached? %>
                  <% first_image = post.images.first %>
                  <% if first_image.content_type.include?("image") %>
                    <%= image_tag first_image, class: 'post_images me-2 mb-3 mt-3', style: 'width: 300px; height: 200px;' %>
                  <% else %>
                    <div class="bg-dark text-center">
                      <%= video_tag rails_blob_path(first_image), autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video", controls: true, type: 'video/mp4', style: "max-width: 100%; height: 320px;" do %>
                        Your browser does not support the video tag.
                      <% end %>
                    </div>
                  <% end %>
                <% end %>
                <div class="user-info" data-controller="user-name" >
                  <h5 data-user-name-target='name' data-action="click->user-name#getUserName" >Posted by : <%= post.user.name %></h5>
                  <h5><%= link_to post.title, post, style: "text-decoration: none;" %></h5>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="card">
        <div class="card-body">
          <h6> There are no shared posts.</h6>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style>
  .post_images {
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .post_images img {
    width: 100%;
    height: auto;
    display: block;
  }
</style>