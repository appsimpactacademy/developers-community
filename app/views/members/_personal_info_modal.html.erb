<%= form_with model: current_user, url: update_member_personal_details_path, method: :patch do |form| %>
<div class="modal-body">
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control mt-2 mb-2', value: current_user.first_name %>
        </div>

        <div class="col-lg-6">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: 'form-control mt-2 mb-2', value: current_user.last_name %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="col-lg-6">
          <%= form.label :username %>
          <%= form.text_field :username, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :date_of_birth %>
          <%= form.date_field :date_of_birth, class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="col-lg-6">
          <%= form.label :profile_title %>
          <%= form.text_field :profile_title, class: 'form-control mt-2 mb-2', value: current_user.profile_title  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :contact_number %>
          <%= form.text_field :contact_number, class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="col-lg-6">
          <%= form.label :street_address %>
          <%= form.text_field :street_address, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>

      <div class="form-group row" >
         <div class="col-lg-12">
          <%= form.label :city %>
          <%= form.text_field :city, class: 'form-control mt-2 mb-2', value: current_user.city %>
        </div>
        <div class="col-lg-6" id="country_states_list">
          <%= form.label :state %>
          <%= form.text_field :state, class: 'form-control mt-2 mb-2', value: current_user.state %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-12">
          <%= form.label :country %>
          <%= form.country_select :country, { prompt: 'Select Country' },  {class: 'form-select mt-3 mb-3', data: { controller: "countries"}}, value: current_user.country %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-12">
          <%= form.label :image %>
          <%= form.file_field :image, class: 'form-control mt-3 mb-3' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :pincode %>
          <%= form.text_field :pincode, class: 'form-control mt-2 mb-2', value: current_user.pincode %>
        </div>

        <div class="col-lg-6">
          <%= form.label :about %>
          <%= form.text_area :about, class: 'form-control mt-2 mb-2', row: 15 %>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  <%= form.submit 'Save Changes', class: 'btn btn-primary' , data: { action: 'click->bs_modal#submitEnd' } %>
</div>
<% end %>