<%= form_with model: @page do |form| %>
  <div class="row">
    <% if @page.errors.any? %>
      <div class="error-area" style="color: red;">
        <h3><%= pluralize(@page.errors.count, 'error') %> prohibited your pages form being saved. </h3>
        <ul>
          <% @page.errors.each do |error| %>
          <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-group row">
    <div class="col-lg-6">
       <%= form.hidden_field :user_id, value:current_user.id %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-6">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control mt-2 mb-2' %>
    </div>
    <div class="col-lg-6">
      <%= form.label :website %>
      <%= form.text_field :website, class: 'form-control mt-2 mb-2' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-6">
      <%= form.label :organization_type %>
      <%= form.select :organization_type, options_for_select(Page::ORGANIZATION_TYPE, selected: form.object.organization_type ),{prompt: 'Select Organization Type'},  {class: 'form-select mt-2 mb-2'} %>
    </div>
    <div class="col-lg-6">
      <%= form.label :organization_size %>
      <%= form.select :organization_size, options_for_select(Page::ORGANIZATION_SIZE, selected: form.object.organization_size ),{prompt: 'Select Organization Size'},  {class: 'form-select mt-2 mb-2'} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :industry %>
    <%= form.select :industry, options_for_select(Page::INDUSTRY, selected: form.object.industry ),{prompt: 'Select Industry'},  {class: 'form-select mt-2 mb-2'} %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.label :about %>
    <%= form.text_area :about, class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control mt-2 mb-2' %>
  </div>


  <div class="form-group row">
    <div class="col-lg-6">
      <%= form.submit class: 'btn btn-primary mt-2' %>
      <%= link_to 'Back', pages_path, class: 'btn btn-warning mt-2' %>
    </div>
  </div>
<% end %>