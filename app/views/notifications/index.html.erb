<div class="container col-lg-10 mx-auto mt-3">
  <% if @notifications.present? %>
    <h2>Notifications</h2>
    <ul class="list-group" id="notifications">
      <%= render @notifications %>
    </ul>
  <% else %>
    <div class="card">
      <div class="card-body">
        <h6>No notification is present!</h6>
      </div>
    </div>    
  <% end %>
</div>