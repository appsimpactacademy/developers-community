<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="editUserModalLabel">Edit User Detail</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <%= form_with(model: user, url: update_member_path(user), remote: true, method: :patch) do |form| %>
    <div class="modal-body">
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :first_name %>
              <%= form.text_field :first_name, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :last_name %>
              <%= form.text_field :last_name, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :email %>
              <%= form.text_field :email, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :username %>
              <%= form.text_field :username, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :date_of_birth %>
              <%= form.text_field :date_of_birth, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :profile_title %>
              <%= form.text_field :profile_title, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :street_address %>
              <%= form.text_field :street_address, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :city %>
              <%= form.text_field :city, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row" id="country_states_list">
            <div class="col-lg-12">
              <%#= form.label :state %>
              <%#= form.text_field :state, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12">
              <%= form.label :country %>
              <%= form.country_select :country, { prompt: 'Select Country' },  {class: 'form-select mt-3 mb-3', data: { controller: "countries" } } %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :pincode %>
              <%= form.text_field :pincode, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :about %>
              <%= form.text_area :about, class: 'form-control mt-2 mb-2', row: 15 %>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <%= form.submit "Submit", class:'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
