<div class="container">
	<%= form_with(model: @user) do |form| %>
	<div class="container">
		<div class="form-group">
			<%= form.label :first_name %>
			<%= form.text_field :first_name, class: 'form-control mt-2 mb-2' %>
		</div>
		<div class="form-group">
			<%= form.label :last_name %>
			<%= form.text_field :last_name, class: 'form-control mt-2 mb-2' %>
		</div>
		<div class="form-group">
			<%= form.label :contact_number %>
			<%= form.text_field :contact_number, class: 'form-control mt-2 mb-2' %>
		</div>
		<div class="form-group">
			<%= form.label :date_of_birth %>
			<%= form.text_field :date_of_birth, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%= form.label :username %>
			<%= form.text_field :username, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%= form.label :city %>
			<%= form.text_field :city, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%#= form.label :state %>
			<%#= form.text_field :state, class: 'form-control mt-3 mb-3' %>
		</div>

		<div class="form-group" id="country_states_list">
        </div>

		<div class="form-group">
			<%= form.label :country %>
			<%= form.country_select :country, { prompt: 'Select Country' },  {class: 'form-select mt-3 mb-3', data: { controller: "countries" }} %>
		</div>
		<div class="form-group">
			<%= form.label :pincode %>
			<%= form.text_field :pincode, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%#= form.label :steert_address %>
			<%#= form.text_field :steert_address, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%= form.label :profile_title %>
			<%= form.text_field :profile_title, class: 'form-control mt-3 mb-3' %>
		</div>
		<div class="form-group">
			<%= form.label :about %>
			<%= form.text_field :about, class: 'form-control mt-3 mb-3' %>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
		<%= form.submit "Submit", class:'btn btn-primary' %>
	</div>
	<% end %>
</div>