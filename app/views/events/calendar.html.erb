<div class="col-lg-10 mx-auto mt-3" data-controller="calendar" data-calendar-target="calendar">
  <div id="calendar"></div>
</div>

<!-- event creation modal popup -->
<div class="modal" id="eventModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Event</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <p class="event-error text-danger"></p>
        <form id="eventForm">
          <div class="form-group mt-2 mb-2">
            <label for="eventName">Event Name</label>
            <input type="text" class="form-control mt-2 mb-2" id="eventName" placeholder="Event Name">
          </div>

          <div class="form-group mt-2 mb-2">
            <label for="eventType">Event Type</label>
            <input type="text" class="form-control mt-2 mb-2" id="eventType" placeholder="Event Type">
          </div>

          <div class="form-group row mt-2 mb-2">
            <div class="form-group col-lg-6">
              <label for="startDate">Start Date</label>
              <input type="date" class="form-control mt-2 mb-2" id="startDate">
            </div>
            <div class="form-group col-lg-6">
              <label for="startTime">Start Time</label>
              <input type="time" class="form-control mt-2 mb-2" id="startTime">
            </div>
          </div>

          <div class="form-group row mt-2 mb-2">
            <div class="form-group col-lg-6">
              <label for="endDate">End Date</label>
              <input type="date" class="form-control mt-2 mb-2" id="endDate">
            </div>
            <div class="form-group col-lg-6">
              <label for="endTime">End Time</label>
              <input type="time" class="form-control mt-2 mb-2" id="endTime">
            </div>
          </div>

          <div class="form-group mt-2 mb-2">
            <label for="eventDescription">Event Description</label>
            <textarea class="form-control mt-2 mb-2" id="eventDescription" rows="3" placeholder="Event Description"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveEvent">Save changes</button>
      </div>
    </div>
  </div>
</div>
<style>
  .fc-daygrid-event {
    cursor: pointer;
  }
</style>
